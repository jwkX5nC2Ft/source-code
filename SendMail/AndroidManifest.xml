<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.example.camera"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/new_ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MailAdressActivity"
            android:label="@string/title_activity_mail_adress" >
        </activity>
        <activity
            android:name=".ImageViewActivity"
            android:label="@string/title_activity_image_view" >
        </activity>
        <activity
            android:name=".SelectImageActivity"
            android:label="@string/title_activity_select_image" >
        </activity>
        <activity
            android:name=".CameraActivity"
            android:label="@string/title_activity_camera" >
        </activity>
        <activity
            android:name=".CameraView"
            android:label="@string/title_activity_camera_view" >
        </activity>
        <activity
            android:name=".CameraAlertDialog"
            android:label="@string/title_activity_camera_alert_dialog" >
        </activity>
        <activity
            android:name=".CameraImageSelectActivity"
            android:label="@string/title_activity_camera_image_select" >
        </activity>
        <activity
            android:name=".PopupWindow"
            android:label="@string/title_activity_popup_window" >
        </activity>
        <activity
            android:name=".Camera2Activity"
            android:label="@string/title_activity_camera2" >
        </activity>
        <activity
            android:name=".SendMailActivity"
            android:label="@string/title_activity_send_mail" >
        </activity>

        <intent-filter>
            <action android:name="android.intent.action.SEND" />

            <category android:name="android.intent.category.DEFAULT" />

            <data android:mimeType="image/*" />
        </intent-filter>

        <activity
            android:name=".Camera3Activity"
            android:label="@string/title_activity_camera3" >
        </activity>
        <activity
            android:name=".FinishActivity"
            android:label="@string/title_activity_finish" >
        </activity>
        <activity
            android:name=".ReadText"
            android:label="@string/title_activity_read_text" >
        </activity>
        <activity
            android:name=".Acount"
            android:label="@string/title_activity_acount" >
        </activity>
    </application>

</manifest>
